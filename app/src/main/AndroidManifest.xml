<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="com.smu_odab.smu_quiz_2">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- 카메라, 내부 저장소 접근 권한 부여 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
            android:name="android.hardware.camera"
            android:required="true" />

    <application
            android:name="com.smu_odab.smu_quiz_2.User"
            android:allowBackup="true"
            android:icon="@mipmap/ic_smu_odab_folder_logo"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true"
            tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.smu_odab.smu_quiz_2.QuizSolveActivity"></activity>
        <activity android:name="com.smu_odab.smu_quiz_2.OdabPaintActivity"></activity>
        <activity android:name="com.smu_odab.smu_quiz_2.UserFolderActivity"></activity>
        <activity android:name="com.smu_odab.smu_quiz_2.LoginActivity"></activity>
        <activity android:name="com.smu_odab.smu_quiz_2.FolderAddActivity"
                  android:theme = "@style/Transparent">     <!-- 배경 투명하게 -->
        </activity>
        <activity android:name="com.smu_odab.smu_quiz_2.OdabAddActivity"></activity>
        <activity android:name="com.smu_odab.smu_quiz_2.OdabFolderActivity"></activity>
        <activity android:name="com.smu_odab.smu_quiz_2.OdabDetailActivity"></activity>
        <activity android:name="com.smu_odab.smu_quiz_2.PictureChoiceActivity"
                  android:theme = "@style/Transparent" >    <!-- 배경 투명하게 -->
        </activity>
        <activity android:name="com.smu_odab.smu_quiz_2.QuizFolderActivity"></activity>
        <activity android:name="com.smu_odab.smu_quiz_2.QuizAdd"></activity>
        <activity android:name="com.smu_odab.smu_quiz_2.DeleteChoiceActivity"
                  android:theme = "@style/Transparent">      <!-- 배경 투명하게 -->
        </activity>
        <activity android:name="com.smu_odab.smu_quiz_2.QuizDetail"></activity> <!-- 스플래쉬 -->
        <activity android:name="com.smu_odab.smu_quiz_2.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- 사진 촬영을 위한 프로바이더 -->
        <provider
                android:name="androidx.core.content.FileProvider"
                android:authorities="com.smu_odab.smu_quiz_2"
                android:exported="false"
                android:grantUriPermissions="true">
            <meta-data
                    android:name="android.support.FILE_PROVIDER_PATHS"
                    android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>