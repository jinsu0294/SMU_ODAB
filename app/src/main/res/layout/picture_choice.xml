<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <View
            android:id="@+id/viewBasic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/folder_big_height"
            android:background="@drawable/round_fill"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="@dimen/margin30"
            android:layout_marginLeft="@dimen/margin30"
    />

    <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/viewBasic"
            app:layout_constraintBottom_toBottomOf="@id/viewBasic"
            app:layout_constraintRight_toRightOf="@id/viewBasic"
            app:layout_constraintLeft_toLeftOf="@id/viewBasic"
    >
        <Button
                android:id="@+id/btnTakePicture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white"
                android:text="@string/take_picture"
                android:textSize="@dimen/button_text_size"
        />
        <Button
                android:id="@+id/btnGetPicture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:text="@string/get_picture"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text_size"
        />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>