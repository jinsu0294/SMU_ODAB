<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/lightPurple"
        android:focusable="true"
        android:focusableInTouchMode="true"
>
    <Button
            android:id="@+id/tvOdabTitle"
            android:textSize="@dimen/button_text_size"
            android:text="@string/tile"
            android:backgroundTint="@color/darkPurple"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/margin10"
            android:layout_marginLeft="@dimen/margin10"
    />

    <TextView
            android:id="@+id/tvUserOdabTitle"
            android:textSize="@dimen/edit_text_size"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/tvOdabTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvOdabTitle"
            app:layout_constraintBottom_toBottomOf="@id/tvOdabTitle"
            android:layout_marginRight="@dimen/margin10"
            android:paddingLeft="@dimen/margin10"
            android:layout_marginTop="@dimen/margin10"
            android:layout_marginBottom="@dimen/margin10"
    />
    <View
            android:id="@+id/line1"
            android:layout_width="0dp"
            android:layout_height="@dimen/line_view_height"
            android:background="@color/grey"
            app:layout_constraintTop_toBottomOf="@id/tvOdabTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/margin10"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginTop="@dimen/margin10"
    />
    <ScrollView
            android:id="@+id/svPicture"
            android:layout_width="0dp"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@id/line1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/line2"
    >
        <ImageView
                android:id="@+id/ImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        />
    </ScrollView>

    <View
            android:id="@+id/line2"
            android:layout_width="0dp"
            android:layout_height="@dimen/line_view_height"
            android:background="@color/grey"
            app:layout_constraintTop_toBottomOf="@id/svPicture"
            app:layout_constraintLeft_toLeftOf="@id/line1"
            app:layout_constraintRight_toRightOf="@id/line1"
            android:layout_marginTop="@dimen/margin10"
    />

    <Button
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/darkPurple"
            android:text="@string/text"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size"
            app:layout_constraintTop_toBottomOf="@id/line2"
            app:layout_constraintLeft_toLeftOf="@id/tvOdabTitle"
            android:layout_marginTop="@dimen/margin10"
    />

    <ScrollView
            android:id="@+id/svText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tvText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="@dimen/margin10"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginBottom="@dimen/margin10"
            android:layout_marginTop="@dimen/margin10"
    >
        <TextView
                android:id="@+id/tvUserTextContents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/edit_text_size"
                android:paddingLeft="@dimen/margin10"
        />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>