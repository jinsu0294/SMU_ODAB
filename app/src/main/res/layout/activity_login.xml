<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:background="@color/lightPurple"
>

    <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/main_icon_size"
            android:layout_height="@dimen/main_icon_size"
            app:srcCompat="@mipmap/ic_launcher"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/margin50"
/>
    <TextView
            android:id="@+id/tvTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인이 필요합니다 :-)"
            android:textSize="@dimen/edit_text_size"
            android:textColor="@color/white"
            android:background="@drawable/round_fill"
            android:padding="@dimen/edit_padding_left"
            app:layout_constraintTop_toBottomOf="@id/iv_icon"
            app:layout_constraintRight_toRightOf="@id/iv_icon"
            app:layout_constraintLeft_toLeftOf="@id/iv_icon"


    />
    <com.google.android.gms.common.SignInButton
            android:id="@+id/btnlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin10"
        >
    </com.google.android.gms.common.SignInButton>

</androidx.constraintlayout.widget.ConstraintLayout>