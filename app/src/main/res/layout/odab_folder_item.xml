<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <TextView
            android:id="@+id/tvOdabTitle"
            android:layout_width="0dp"
            android:layout_height="@dimen/folder_item_height"
            android:background="@drawable/round_fill"
            android:layout_marginTop="@dimen/margin10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/white"
            android:gravity="center"
    />
    <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/delete_light_purple"
            app:layout_constraintTop_toTopOf="@id/tvOdabTitle"
            app:layout_constraintRight_toRightOf="@id/tvOdabTitle"
            app:layout_constraintBottom_toBottomOf="@id/tvOdabTitle"
            android:layout_marginRight="@dimen/margin10"

    />

</androidx.constraintlayout.widget.ConstraintLayout>